<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ta.d3ti.wisnupamungkas.rekammediskeluarga.TambahFotoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/com_facebook_messenger_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="55dp"
        android:background="@color/material_grey_300"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/foto_camera"
            android:background="@drawable/rounded_corner_content"
            android:layout_weight="1"
            android:id="@+id/image_anak"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/keterangan"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:hint="Keterangan"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/input_login"
            android:textSize="14dip" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OPEN CAMERA"
            android:id="@+id/btn_camera"
            android:background="@color/com_facebook_messenger_blue"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_upload_image"
            android:id="@+id/buttonUpload"
            android:textColor="@color/white"
            android:background="@color/material_deep_teal_500"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
